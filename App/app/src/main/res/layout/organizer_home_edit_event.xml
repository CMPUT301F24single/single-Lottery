<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 返回按钮 -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back Button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backButton"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewPoster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Event Poster"/>

            <!-- 上传新海报按钮 -->
            <Button
                android:id="@+id/buttonChangePoster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Poster"/>

            <EditText
                android:id="@+id/editTextEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextEventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Time"
                android:inputType="datetime" />

            <EditText
                android:id="@+id/editTextRegistrationDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Registration Deadline"
                android:inputType="datetime" />

            <EditText
                android:id="@+id/editTextLotteryTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lottery Time"
                android:inputType="datetime" />

            <EditText
                android:id="@+id/editTextWaitingListCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Waiting List Count"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextLotteryCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lottery Count"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Description"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/buttonUpdateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Event"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

