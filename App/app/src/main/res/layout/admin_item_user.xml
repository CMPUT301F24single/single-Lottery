<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded_corners_grey"
    android:layout_marginBottom="4dp">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/adminUserImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="User Profile"
        android:layout_marginEnd="8dp" />

    <!-- User Details Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- User Name -->
        <TextView
            android:id="@+id/adminUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="17sp"
            android:padding="4dp"
            android:textStyle="bold" />

        <!-- User ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">
            <ImageView
                android:src="@drawable/baseline_contact_emergency_24"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/adminUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="                              "
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Number of Events -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">
            <ImageView
                android:src="@drawable/baseline_sports_kabaddi_24"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/adminUserEventCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="              "
                android:textSize="14sp"/>
        </LinearLayout>

</LinearLayout>

    </LinearLayout>
