<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 使用一个 LinearLayout 包含所有内容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginBottom="16dp" />

        <!-- Event Details Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Event Poster Image -->
            <ImageView
                android:id="@+id/imageViewPoster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Event Poster" />

            <!-- Event Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name:"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />
            <TextView
                android:id="@+id/eventNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Event Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Description:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/eventDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Event Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Time:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/eventTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Registration Deadline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Deadline:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/registrationDeadlineTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Lottery Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lottery Time:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/lotteryTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Waiting List Count -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting List Count:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/waitingListCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Lottery Count -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lottery Count:"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/lotteryCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Activity Status -->
            <TextView
                android:id="@+id/eventStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/eventStatusValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Cancel Registration Button -->
            <Button
                android:id="@+id/cancelRegistrationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Registration"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
