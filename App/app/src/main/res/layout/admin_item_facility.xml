<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/rounded_corners_grey"
    android:layout_marginBottom="4dp">

    <!-- Facility Name TextView -->
    <TextView
        android:id="@+id/facilityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="Facility Name" />

    <!-- Lottery Date TextView with Location -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_calendar_month_24" />

        <TextView
            android:id="@+id/adminFacilityEventCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text=""
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Buttons Side by Side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/viewEventsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="View Events"
            android:layout_weight="1"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delete Facility"
            android:layout_weight="1"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</LinearLayout>
