<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:background="@drawable/rounded_corners_grey"
    android:layout_marginBottom="4dp">

    <!-- Container for Organizer Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Event Name TextView -->
        <TextView
            android:id="@+id/adminOrganizerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- Facility TextView with Location Icon -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <ImageView
                android:src="@drawable/baseline_contact_emergency_24"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/adminOrganizerIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizer"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>

        <!-- Lottery Date TextView with location-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:src="@drawable/baseline_event_24"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/adminEventCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# Events"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>



    </LinearLayout>

    <!-- View Button -->
    <Button
        android:id="@+id/adminEventsViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:layout_gravity="center"/>

</LinearLayout>
